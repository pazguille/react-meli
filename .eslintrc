{
  "extends": "airbnb/base",
  "rules": {
    "max-len": [2, 80, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prefer-stateless-function": "error"
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
